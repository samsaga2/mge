sub init
    image "skeleton.png"
    color 15
    pos (100, 100)
endsub

sub update
    if keydown("left") then
       move (-1, 0)
    endif
    if keydown("right") then
       move (1, 0)
    endif
    if keydown("up") then
       move (0, -1)
    endif
    if keydown("down") then
       move (0, 1)
    endif
endsub