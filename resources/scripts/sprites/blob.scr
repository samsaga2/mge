sub init
    image "blob.png"
    color 5
    type 2
    call random_y
    pos arg0, y
endsub

sub update
    if collide 3 then
      delete
      new sprite "blob.scr"
      return
    endif

    move -1, 0
    if x = 0 then
       call random_y
    endif
endsub

sub random_y
    pos 255, rnd
    if y > 144 then
       call random_y
    endif
endsub