sub init
    global0 = global0 + 1
    load image, "bullet.png"
    type 3
    width 2
    height 2
    pos arg0, arg1
    move 48, 0
    sfx play 0
endsub

sub update
    if x >= 2016 then
        call kill_bullet
        return
    endif

    if collide 2 then
        call kill_bullet
        return
    endif

    if tile 8, 8 = 1 then
        call kill_bullet
        return
    endif

    move 32, 0
endsub

sub kill_bullet
    global0 = global0 - 1
    delete
endsub