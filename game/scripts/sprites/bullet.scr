sub init
    global0 = global0 + 1
    load image, "bullet.png"
    type 3
    width 2
    height 2
    pos arg0, arg1
    move 6, 0
endsub

sub update
    if x >= 252 then
        global0 = global0 - 1
        delete
        return
    endif

    if collide 2 then
        global0 = global0 - 1
        delete
        return
    endif

    move 4, 0
endsub
