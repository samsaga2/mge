property state ' 0-normal 1-explosion

sub init
    load image, "missile.png"
    type = 2
    call random_y
    x = arg0
    state = 0
endsub

sub update
    if state = 1 then
       return
    endif

    if collide 3 then
       state = 1
       load animation, "missile_explosion.scr"
       return
    endif

    x = x - 8
    if x <= 0 then
       call random_y
    endif
endsub

sub random_y
    x = 2040
    y = rnd
    if y > 1152 then
       call random_y
    endif
endsub